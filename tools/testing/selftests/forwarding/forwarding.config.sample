#!/bin/bash

# Topology description. p1 looped back to p2, p3 to p4 and so on.
declare -A NETIFS

NETIFS[p1]=veth0
NETIFS[p2]=veth1
NETIFS[p3]=veth2
NETIFS[p4]=veth3
NETIFS[p5]=veth4
NETIFS[p6]=veth5
NETIFS[p7]=veth6
NETIFS[p8]=veth7

# Various configuration options applicable to the testing framework.
declare -A OPTIONS

# Time to wait after interfaces participating in the test are all UP.
OPTIONS[wait_time]=5
